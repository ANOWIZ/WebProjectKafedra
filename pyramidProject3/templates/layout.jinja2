  <body>

    <div class="pictures">
      <div class="container">
        <div class="row">
          <div class="pictures">
              <p>
            <img class="logo img-responsive" src="{{request.static_url('pyramidProject3:static/f.jpg') }}" alt="pyramid web framework">
              <form action="/login" method="POST">
                  <p><b>Войти</b></p>
                  <p>Логин: <textarea rows="1" cols="20" name="name"></textarea></p>
                  <p>Пароль: <textarea rows="1" cols="20" name="password"></textarea></p>
                  <p><input type="submit"></p>
              </form>
              </p>
          </div>
        <div class="pictures">
            <img class="logo img-responsive" src="{{ request.static_url('pyramidProject3:static/kartinka.jpg') }}" alt="pyramid web framework">
        </div>
          <div class="col-md-10">
            {% block content %}
                <p>No content</p>
            {% endblock content %}
          </div>
        </div>
        <div class="row">
          <div class="links">
            <ul>
              <li><i class="glyphicon glyphicon-cog icon-muted"></i><a href="https://github.com/Pylons/pyramid">Github Project</a></li>
              <li><i class="glyphicon glyphicon-globe icon-muted"></i><a href="https://webchat.freenode.net/?channels=pyramid">IRC Channel</a></li>
              <li><i class="glyphicon glyphicon-home icon-muted"></i><a href="https://pylonsproject.org">Pylons Project</a></li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="copyright">
            Copyright &copy; Pylons Project
          </div>
        </div>
      </div>
    </div>


